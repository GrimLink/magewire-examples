<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
      layout="1column"
>
    <body>
        <referenceContainer name="content">
            <container name="hyva-camp.wrapper" htmlClass="grid grid-cols-3 gap-8" htmlTag="div">
                <block name="wizard" template="Magewirephp_MagewireExamples::wizard.phtml">
                    <arguments>
                        <argument name="magewire" xsi:type="object">Magewirephp\MagewireExamples\Magewire\Wizard</argument>
                    </arguments>
                    <block name="step1" template="Magewirephp_MagewireExamples::step1.phtml"/>
                    <block name="step2" template="Magewirephp_MagewireExamples::step2.phtml"/>
                    <block name="step3" template="Magewirephp_MagewireExamples::step3.phtml"/>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
